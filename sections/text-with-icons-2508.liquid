<style>
  #shopify-section-{{ section.id }} {
    {% if section.settings.remove_vertical_spacing %}--section-spacing-block: 0px;{% endif %}
    {% if section.settings.remove_horizontal_spacing %}--section-spacing-inline: 0px;{% endif %}
  }
</style>

{%- render 'section-spacing-collapsing' -%}

<div {% render 'section-properties' %}>

  <div class="tw-flex 2xl:tw-flex-nowrap tw-flex-wrap md:tw-mb-4 tw-justify-start">
  {% for block in section.blocks %}
  {% assign bk_stts = block.settings %}
    {% if bk_stts.icon != blank %}
    <div class="item 2xl:tw-w-auto lg:tw-w-1/4 md:tw-w-1/3 tw-w-1/2 md:tw-p-0 tw-p-1 2xl:tw-flex-1">
      <div class="tw-p-2 tw-h-full tw-text-center">
        <div class="tw-w-1/5 tw-shrink-0 tw-text-center tw-mx-auto">
            {{- bk_stts.icon | image_url: width: bk_stts.icon.width | image_tag: loading: 'lazy', class: 'image-icon' -}} 
        </div>
        <div class="item-content tw-flex tw-flex-col"> 
          <p class="tw-text-lg tw-font-semibold tw-mb-0 tw-leading-tight">{{ bk_stts.title }} </p>
          <p class="tw-text-stone-700 tw-text-sm tw-whitespace-nowrap">{{ bk_stts.content }} </p>
        </div>
      </div>
    </div>
    {% endif %}
  {% endfor %}
  </div>

</div>

{% schema %}
{
  "name": "Icon list",
  "class": "shopify-section--icon-list",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "remove_vertical_spacing",
      "label": "Remove vertical spacing",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "remove_horizontal_spacing",
      "label": "Remove horizontal spacing",
      "default": false
    },
    {
      "type": "header",
      "content": "Colors",
      "info": "Gradient replaces solid colors when set."
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "Text",
          "default": "30+ Mph",
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Top Speed",
        }
      ]
    },
  ],
  "presets": [
    {
      "category": "Customize",
      "name": "Icon list"
    }
  ]
}
{% endschema %}
