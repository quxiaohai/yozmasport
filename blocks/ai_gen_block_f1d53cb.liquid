{% doc %}
  @prompt
    Help me create a section that can play videos on the left and text on the right

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-text-section-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    max-width: 100%;
  }

  .ai-video-text-section__video-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    border-radius: {{ block.settings.video_border_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-video-text-section__video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%;
  }

  .ai-video-text-section__video-iframe-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .ai-video-text-section__video-placeholder-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 300px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.video_border_radius }}px;
    position: relative;
  }

  .ai-video-text-section__video-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .ai-video-text-section__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
  }

  .ai-video-text-section__content-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-video-text-section__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_margin }}px 0;
    font-weight: 600;
  }

  .ai-video-text-section__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0 0 {{ block.settings.text_margin }}px 0;
  }

  .ai-video-text-section__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-video-text-section__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 768px) {
    .ai-video-text-section-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.gap | divided_by: 2 }}px;
    }

    .ai-video-text-section__content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | divided_by: 2 }}px 0;
    }

    .ai-video-text-section__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-video-text-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-text-section__video-{{ ai_gen_id }}">
    {% if block.settings.video_url != blank %}
      {% assign video_id = '' %}
      {% assign video_platform = '' %}
      
      {% if block.settings.video_url contains 'youtube.com' or block.settings.video_url contains 'youtu.be' %}
        {% assign video_platform = 'youtube' %}
        {% if block.settings.video_url contains 'youtu.be/' %}
          {% assign video_id = block.settings.video_url | split: 'youtu.be/' | last | split: '?' | first %}
        {% elsif block.settings.video_url contains 'watch?v=' %}
          {% assign video_id = block.settings.video_url | split: 'watch?v=' | last | split: '&' | first %}
        {% endif %}
      {% elsif block.settings.video_url contains 'vimeo.com' %}
        {% assign video_platform = 'vimeo' %}
        {% assign video_id = block.settings.video_url | split: 'vimeo.com/' | last | split: '?' | first %}
      {% endif %}

      {% if video_id != blank %}
        <div class="ai-video-text-section__video-wrapper-{{ ai_gen_id }}">
          {% if video_platform == 'youtube' %}
            <iframe
              class="ai-video-text-section__video-iframe-{{ ai_gen_id }}"
              src="https://www.youtube.com/embed/{{ video_id }}"
              title="YouTube video player"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          {% elsif video_platform == 'vimeo' %}
            <iframe
              class="ai-video-text-section__video-iframe-{{ ai_gen_id }}"
              src="https://player.vimeo.com/video/{{ video_id }}"
              title="Vimeo video player"
              frameborder="0"
              allow="autoplay; fullscreen; picture-in-picture"
              allowfullscreen
            ></iframe>
          {% endif %}
        </div>
      {% else %}
        <div class="ai-video-text-section__video-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-video-text-section__empty-state-{{ ai_gen_id }}">
            Please enter a valid YouTube or Vimeo URL
          </div>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-video-text-section__video-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-video-text-section__empty-state-{{ ai_gen_id }}">
          Next, add a video URL
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-video-text-section__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-video-text-section__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-video-text-section__text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_url != blank %}
      <a
        href="{{ block.settings.button_url }}"
        class="ai-video-text-section__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

